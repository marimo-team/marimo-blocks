{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": true,
		"jsx": "react-jsx",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noErrorTruncation": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext",
		"rootDir": "./src",
		"outDir": "./dist"
	},
	"include": ["./src"],
	"exclude": ["./demo", "./src/**/*.test.ts"]
}
